<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".daehwan.HomeActivity">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="95dp"

        app:layout_constraintTop_toTopOf="parent" />


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcv_home"
        android:name="com.sopt.soptmon.daehwan.HomeFragment"
        android:layout_width="match_parent"

        android:layout_height="wrap_content"
        app:layout_constraintBottom_toTopOf="@id/bt_nav_bar"

        app:layout_constraintTop_toBottomOf="@id/top_nav_bar"
        tools:layout="@layout/home_frame" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bt_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="56dp"

        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>