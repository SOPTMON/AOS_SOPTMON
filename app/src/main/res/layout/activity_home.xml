<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".daehwan.HomeActivity">


    <com.google.android.material.appbar.MaterialToolbar
        android:id="@+id/top_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:background="@color/black"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/fcv_home"/>


    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/fcv_home"
        android:layout_width="match_parent"
        android:layout_height="0dp"


        app:layout_constraintTop_toBottomOf="@id/top_nav_bar"
        app:layout_constraintBottom_toTopOf="@id/bt_nav_bar"

        tools:layout="@layout/home_frame" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bt_nav_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"

        android:background="@color/black"
        />

</androidx.constraintlayout.widget.ConstraintLayout>