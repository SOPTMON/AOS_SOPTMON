<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/img_tvon_static"
        android:layout_width="90dp"
        android:layout_height="80dp"

        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tx_tvon_static"
        android:layout_width="wrap_content"
        android:layout_height="20dp"

        android:textColor="@color/body_discount_color"
        android:textSize="12sp"

        app:layout_constraintEnd_toEndOf="@+id/img_tvon_static"
        app:layout_constraintStart_toStartOf="@+id/img_tvon_static"
        app:layout_constraintTop_toBottomOf="@+id/img_tvon_static" />

</androidx.constraintlayout.widget.ConstraintLayout>